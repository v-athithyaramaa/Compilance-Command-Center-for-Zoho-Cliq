# ========================================
# ZOHO CONFIGURATION
# ========================================
# Replace these values with your actual credentials

# Your Zoho data center (us, eu, in, au, jp)
ZOHO_DATA_CENTER=us

# From: https://accounts.zoho.com/developerconsole
ZOHO_CLIENT_ID=YOUR_CLIENT_ID_HERE
ZOHO_CLIENT_SECRET=YOUR_CLIENT_SECRET_HERE

# From: Cliq → Settings → Organization
ZOHO_ORGANIZATION_ID=YOUR_ORG_ID_HERE

# ========================================
# CLIQ BOT CONFIGURATION
# ========================================

# From: Bot creation in Cliq
CLIQ_BOT_ID=YOUR_BOT_ID_HERE
CLIQ_BOT_NAME=ComplianceBot

# Base URLs (auto-configured based on data center)
CLIQ_BASE_URL=https://cliq.zoho.com
CLIQ_API_URL=https://www.zohoapis.com/cliq/v2

# ========================================
# CATALYST CONFIGURATION
# ========================================

# From: https://console.catalyst.zoho.com → Project Settings
CATALYST_PROJECT_ID=YOUR_PROJECT_ID_HERE
CATALYST_PROJECT_KEY=YOUR_PROJECT_KEY_HERE

# Base URLs (auto-configured based on data center)
CATALYST_BASE_URL=https://console.catalyst.zoho.com
CATALYST_API_URL=https://www.zohoapis.com/catalyst/v1

# ========================================
# ZIA AI CONFIGURATION
# ========================================

ZIA_API_URL=https://www.zohoapis.com/zia/v1

# These will be generated after you create and train Zia Skills
ZIA_COMPLIANCE_SKILL_ID=compliance_extractor_v1
ZIA_RISK_SKILL_ID=risk_predictor_v1

# ========================================
# OAUTH CONFIGURATION
# ========================================

OAUTH_AUTHORIZE_URL=https://accounts.zoho.com/oauth/v2/auth
OAUTH_TOKEN_URL=https://accounts.zoho.com/oauth/v2/token
OAUTH_REDIRECT_URI=https://cliq.zoho.com/oauth/callback

# ========================================
# APPLICATION SETTINGS
# ========================================

NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ========================================
# FEATURE FLAGS
# ========================================

# Enable passive channel monitoring
ENABLE_AUTO_MONITORING=true

# Enable AI risk prediction (requires Zia Skills)
ENABLE_RISK_PREDICTION=false

# Enable blockchain-style audit trail
ENABLE_AUDIT_TRAIL=true

# Enable external storage (requires AWS/GCS config)
ENABLE_EXTERNAL_STORAGE=false

# ========================================
# OPTIONAL: EXTERNAL STORAGE (AWS S3)
# ========================================
# Uncomment and configure for production audit retention

# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_S3_BUCKET=compliance-audit-logs
# AWS_REGION=us-east-1

# ========================================
# OPTIONAL: ZOHO PROJECTS INTEGRATION
# ========================================
# Uncomment for dependency tracking

# ZOHO_PROJECTS_API_TOKEN=your_projects_token
# ENABLE_DEPENDENCY_TRACKING=false

# ========================================
# OPTIONAL: ZOHO CREATOR
# ========================================
# Uncomment after setting up Creator app

# CREATOR_APP_NAME=compliance-command-center
# CREATOR_WEBHOOK_URL=your_webhook_url
